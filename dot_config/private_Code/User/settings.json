{
  // 界面设置
  "window.controlsStyle": "custom",
  "window.dialogStyle": "custom",
  "workbench.colorTheme": "Default Light Modern",
  // 编辑器设置
  "editor.fontFamily": "'Liberation Mono'",
  "editor.tabSize": 2,
  "editor.formatOnSave": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 0,
  // 终端设置
  "terminal.integrated.stickyScroll.enabled": false,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  // Git 设置
  "git.autofetch": true,
  // CPH 设置
  "cph-ng.compilation.cppArgs": "-std=c++14 -O2 -Wall -Wfatal-errors -static",
  "cph-ng.compilation.useWrapper": true,
  "cph-ng.compilation.useHook": true,
  "cph-ng.runner.unlimitedStack": true,
  "cph-ng.problem.templateFile": "${home}/template.cpp",
  "cph-ng.companion.customPathScript": "${home}/.local/bin/filePathGenerator.js",
  // 扩展与安全设置
  "extensions.ignoreRecommendations": true,
  "security.workspace.trust.enabled": false,
  // AI 与隐私设置
  "chat.disableAIFeatures": true,
  "claudeCode.preferredLocation": "panel",
  "telemetry.telemetryLevel": "off"
}